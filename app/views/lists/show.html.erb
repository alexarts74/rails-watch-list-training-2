<div class="container">
  <h1>Voici la liste</h1>
  <h3 class="mb-3"><%= @list.name %></h3>
  <% @list.bookmarks.each do |bookmark| %>
    <p class="mt-3"><%= bookmark.movie.title %></p>
    <%= bookmark.comment %>
    <p><%= image_tag bookmark.movie.poster_url, height: 200, width: 200%></p>
    <p><%= link_to "Supprimer ce bookmark", list_bookmark_path(@list, bookmark) , data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %><p>
  <% end %>
  <p class="mt-3"><%= link_to "Créer un nouveau bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %></p>
  <p><%= link_to "Retourner aux listes", lists_path, class: "btn btn-primary" %></p>

</div>

